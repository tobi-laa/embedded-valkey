<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="io.github.tobi.laa.embedded.valkey.process.ValkeyProcess" level="INFO"/>
    <logger name="io.github.tobi.laa.embedded.valkey" level="DEBUG"/>
</configuration>